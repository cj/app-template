<div data-controller="flash-component--base" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <%# <img src="..." class="rounded me-2" alt="..."> %>

    <%= render(IconComponent::Base.new({ svg: 'square-solid', class: "flash-template-icon me-2 text-#{alert_class(type)}"})) %>

    <strong class="flash-template-header me-auto">
      <%= header %>
    </strong>

    <small class="text-muted">just now</small>

    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>

  <div class="flash-template-message toast-body">
    <%= message %>
  </div>
</div>
