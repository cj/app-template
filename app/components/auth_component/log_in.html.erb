<turbo-frame id="log_in" target="_top">
  <%= render FormComponent::Base.new(User.new, options) do |c| %>
      <%= render FlashComponent::Base.new %>

      <%= c.input :email, value: email, required: true %>
      <%= c.input :password, required: true %>

      <% if devise_mapping.rememberable? %>
        <%= c.checkbox :remember_me %>
      <% end %>

    <div class="d-flex">
      <%= c.button(type: :submit) { 'Login' } %>
    </div>
  <% end %>
</turbo-frame>

<%= render DeviseComponent::SharedLinks.new(class: 'mt-2') %>
