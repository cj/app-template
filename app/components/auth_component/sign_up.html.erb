<turbo-frame id="sign_up">
  <%= render FormComponent::Base.new(user, options) do |c| %>
    <%= c.input :name, required: true %>
    <%= c.input :email, required: true %>
    <%= c.input :password, required: true %>
    <%= c.input :password_confirmation, required: true %>

    <div class="d-flex">
      <%= c.submit { 'Sign Up' } %>
    </div>
  <% end %>
</turbo-frame>

<%= render DeviseComponent::SharedLinks.new(class: 'mt-2') %>
