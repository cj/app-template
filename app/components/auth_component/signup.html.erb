<%= render FormComponent::Base.new(user, options) do |c| %>
  <%= c.input :name %>
  <%= c.input :email %>
  <%= c.input :password %>
  <%= c.input :password_confirmation %>

  <%= c.time_zone :time_zone %>

  <div class="d-flex">
    <%= c.submit { 'Sign Up' } %>
  </div>
<% end %>

<%= render AuthComponent::Links.new(class: 'mt-2') %>
