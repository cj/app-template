<% if show_info_bar %>
  <%= render HeaderComponent::Info.new %>
<% end %>

<%= tag.nav tag_options do %>
  <div class="container justify-content-start">
    <%= render ButtonComponent::Base.new({
      color: 'link',
      class: 'd-lg-none',
      aria: {
        controls: 'navbarHeaderContent',
        expanded: false,
        label: 'Toggle navigation',
      },
      data: {
        controller: "sidebar-component--base",
        "sidebar-component--base-id-value": "#navbarHeaderContent",
        action: "click->sidebar-component--base#openSidebar",
      },
    }) {
      render IconComponent::Base.new(svg: 'bars-regular')
    } %>

    <a class="navbar-brand" href="/">
      <%= render LogoComponent::Base.new %>
    </a>

    <div class="sidebar sidebar-float closed shadow" id="navbarHeaderContent" data-controller="sidebar-component--base">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>

        <%= render DropdownComponent::Base.new(tag: 'li', class: 'nav-item') do |c| %>
          <%= c.button(class: 'nav-link', tag: 'a') { "Dropdown" } %>

          <%= c.list(class: 'dropdown-menu-end') do |l| %>
            <%= l.item { "Action" } %>
            <%= l.item { "Another Action" } %>
            <%= l.item(divider: true) %>
            <%= l.item { "Something else here" } %>
          <% end %>
        <% end %>

        <%# <li class="nav-item">                                                                   %>
        <%#   <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a> %>
        <%# </li>                                                                                   %>
      </ul>

      <%# <form class="d-flex">                                                                      %>
      <%#   <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> %>
      <%#   <button class="btn btn-outline-success" type="submit">Search</button>                    %>
      <%# </form>                                                                                    %>
    </div>
    <div class="sidebar-mask"></div>
  </div>
<% end %>
